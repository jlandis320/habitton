<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1> Edit Your Habit </h1>
  <p>Change or update your habit:</p>
<div class="content-card">
<form id="new-form" action="/habits/<%= habit._id %>?_method=PUT" method="POST">
  <div class="select">
    <label for="category-select">Category:</label>
    <select name="category" id="category-select">
      <option value="Health">Health</option>
      <option value="Work">Work</option>
      <option value="Relationship">Relationship</option>
      <option value="Fitness">Fitness</option>
    </select>
  </div>
  <div class="textarea">
    <label for="habit-input">Habit:</label>
    <textarea type="text" name="habit" id="habit-input" maxlength="140" required><%= habit.habit %></textarea>
  </div>

    <button type="submit">Submit</button>
  </form>
</div>
</main>

<%- include('../partials/footer') %>

