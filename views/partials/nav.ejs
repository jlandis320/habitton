    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <a href="/" class="fa-solid fa-circle-dot fa-2xl fa-fw" title="Habitton"></a>
    <% if (user) { %>
      <div>
      <a href="/habits" class="fa-solid fa-clipboard-list fa-2xl fa-fw" title="All Habits"></a>
      <a href="/habits/new" class="fa-solid fa-plus fa-2xl fa-fw" title="New Habit"></a>
      <a href="/auth/logout" class="right">
          <i type="submit" class="fa-solid fa-right-from-bracket fa-2xl fa-fw" title="Logout"></i>
